<h1>New Person</h1>
<%= form_for :person, url: persons_path do |f| %>
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :text %>
  </p>

  <p>
    <%= f.label :weight %><br>
    <%= f.number_field :amount %>
  </p>
  <p>
    <%= f.label :height %><br>
    <%= f.number_field :amount %>
  </p>

  <p>
    <%= f.label :color %><br>
    <%= f.text_field :text %>
  </p>

  <p>
    <%= f.label :age %><br>
    <%= f.number_field :amount %>
  </p>

  <p>
    <%= f.label :sex %><br>
    <%= f.text_field :text %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>
